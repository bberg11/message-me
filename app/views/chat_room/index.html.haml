%h1.ui.center.aligned.medium.icon.header
  %i.circular.comments.icon
  Say Something

.ui.two.column.grid
  .twelve.wide.column
    .ui.card.fluid.raised.chatbox
      .content
        .ui.small.feed
          - @messages.each do |message|
            .event
              .content
                .summary
                  %em #{message.user.display_name}:
                  = message.body
      .extra.content
        = form_with url: message_path, local: true, class: 'ui reply form' do |form|
          .field
            .ui.fluid.action.input
              = form.text_field :body, placeholder: 'Enter Message'
              = button_tag type: 'submit', class: 'ui blue labeled submit icon button' do
                %i.icon.edit
                Add Reply

  .four.wide.column
    .ui.card.fluid.raised.chatbox
      .content
        .ui.inverted.vertical.menu
          %a.active.item
            Home
          %a.item
            Messages
          %a.item
            Friends
